<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/fill" android:background="@drawable/background">
	<LinearLayout android:orientation="vertical" style="@style/fill" >
		<LinearLayout 
			android:orientation="horizontal"  
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_item"
			android:onClick="login" >
			<ImageView 
				android:src="@drawable/shop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10px"
				android:layout_marginTop="4px"
				android:layout_marginBottom="4px" />
			<TextView 
				android:text="登录店铺"
				android:textSize="16px"
				android:textStyle="bold"
				android:textColor="@drawable/index_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2px"
				android:layout_marginBottom="2px"
				android:layout_marginLeft="20px" />
			<ImageView 
				android:src="@drawable/arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16px"
				android:layout_marginBottom="10px"
				android:layout_marginLeft="240px"
				android:layout_marginRight="10px" />
		</LinearLayout>
		<include layout="@layout/card_seperator" />
		
		<LinearLayout 
			android:orientation="horizontal" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_item"
			android:onClick="openAbout" >
			<ImageView 
				android:src="@drawable/about"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10px"
				android:layout_marginTop="4px"
				android:layout_marginBottom="4px" />
			<TextView 
				android:text="关于" 
				android:textSize="16px"
				android:textStyle="bold"
				android:textColor="@drawable/index_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2px"
				android:layout_marginBottom="2px"
				android:layout_marginLeft="20px" />
			<ImageView 
				android:src="@drawable/arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16px"
				android:layout_marginBottom="10px"
				android:layout_marginLeft="305px"
				android:layout_marginRight="10px" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>