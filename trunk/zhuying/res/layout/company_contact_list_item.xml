<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector" >
    <ImageView
        android:id="@+id/company_contact_icon"
        android:src="@drawable/contact_icon" 
        android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_marginLeft="5dp"
	    android:layout_centerVertical="true" />
     <TextView
        android:id="@+id/company_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@drawable/black"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/company_contact_icon" />
     <ImageView
	    android:id="@+id/company_contact_right_arrow"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/div_right"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10px"
	    android:layout_centerVertical="true" />
     
     <include layout="@layout/setting_divider"/>
</RelativeLayout>